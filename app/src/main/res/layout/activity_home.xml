<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_horizontal_margin">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/labels"
                    android:labelFor="@+id/characterNameInput"
                    android:text="@string/characterNameLabel"/>

            <EditText
                    android:id="@+id/characterNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/labels"
                    android:labelFor="@id/raceInput"
                    android:text="@string/raceLabel"/>

            <EditText
                    android:id="@+id/raceInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_weight="1"
            />

            <TextView
                    style="@style/labels"
                    android:labelFor="@id/rpgClassInput"
                    android:text="@string/rpgClassLabel"/>

            <EditText
                    android:id="@+id/rpgClassInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_weight="1"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/labels"
                    android:labelFor="@id/hpInput"
                    android:text="@string/levelLabel"/>

            <EditText
                    android:id="@+id/hpInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="2"
            />

            <TextView
                    style="@style/labels"
                    android:text="@string/xpLabel"/>

            <EditText
                    android:id="@+id/mawHpInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="2"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/labels"
                    android:text="@string/hpLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"/>

            <TextView
                    style="@style/labels"
                    android:text="/"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/rupeesInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="3"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:labelFor="@id/rupeesInput"
                    android:text="@string/rupeesLabel"
                    android:layout_weight="1"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/destinyPointsTitle"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/labels"
                    android:labelFor="@id/destinyForceInput"
                    android:text="@string/destinyForceLabel"/>

            <EditText
                    android:id="@+id/destinyForceInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/labels"
                    android:labelFor="@id/destinyWisdomInput"
                    android:text="@string/destinyWisdomLabel"/>

            <EditText
                    android:id="@+id/destinyWisdomInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/labels"
                    android:labelFor="@id/destinyCourageInput"
                    android:text="@string/destinyCourageLabel"/>

            <EditText
                    android:id="@+id/destinyCourageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/statsTitle"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/labels"
                    android:text="@string/forceStatLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/labels"
                    android:text="@string/constitutionStatLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/labels"
                    android:text="@string/wisdomStatLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/labels"
                    android:text="@string/charismaStatLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/labels"
                    android:text="@string/intelligenceStatLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/labels"
                    android:text="@string/dexterityStatLabel"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>